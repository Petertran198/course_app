<% if obj.errors.any? %>

  <div class="container sign-up-form">
    <div class="card-panel red lighten-2">
      <span class="white-text">
      <ul>
        <strong><%= pluralize(obj.errors.count, "error") %></strong>
        prohibited your profile from being created
        <% obj.errors.full_messages.each do |message| %>
          <li>* <%= message %></li>
        <% end %>
      </ul>
      </span>      
    </div>
  </div>

<% end %>